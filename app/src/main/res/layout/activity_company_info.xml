<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyInfo"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txtCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtDateFoundation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCompanyName"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtCompanyEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDateFoundation"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:textColor="#1976D2"
        android:singleLine="true"
        android:onClick="sendEmail"/>

    <TextView
        android:id="@+id/txtIsBelCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCompanyEmail"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtBusinessBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIsBelCompany"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtEmployeesNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBusinessBranch"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtCapitalizationCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmployeesNum"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtWebsiteLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCapitalizationCost"
        android:layout_marginTop="5dp"
        android:textColor="#1976D2"
        android:textSize="11.5dp"
        android:singleLine="true"
        android:onClick="openLink"/>

    <TextView
        android:id="@+id/txtRepresNameSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWebsiteLink"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtRepresBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRepresNameSurname"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtRepresPositionInCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRepresBirthday"
        android:layout_marginTop="5dp"
        android:textSize="11.5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txtRepresPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRepresPositionInCompany"
        android:layout_marginTop="5dp"
        android:textColor="#1976D2"
        android:textSize="11.5dp"
        android:singleLine="true"
        android:onClick="call"/>

    <ImageView
        android:id="@+id/imgRepresPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_repres_photo"
        app:layout_constraintTop_toBottomOf="@+id/txtRepresPhoneNum"
        android:onClick="openImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>